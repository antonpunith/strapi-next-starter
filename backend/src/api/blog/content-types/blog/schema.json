    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "default": "Blog",
      "required": true
    },
    "heroBanner": {
      "type": "component",
      "component": "page.hero-banner",
      "repeatable": false
    },
    "intro": {
      "type": "component",
      "component": "page.intro-text",
      "repeatable": false
    },
    "pageSections": {
      "type": "dynamiczone",
      "components": [
        "page.intro-text",
        "page.image-or-color-banner",
        "page.hero-banner"
      ]
    },
    "seo": {
      "type": "component",
      "component": "base.seo",
      "repeatable": false
    }
  }
}
