{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "pageSections": {
      "type": "dynamiczone",
      "components": [
        "page.intro-text-section",
        "page.hero-banner",
        "page.image-or-color-banner"
      ]
    },
    "seo": {
      "type": "component",
      "component": "common.seo",
      "repeatable": false
    }
  }
}
