      "repeatable": false
    },
    "fullWidthBanner": {
      "type": "component",
      "component": "page.full-width-banner",
      "repeatable": false
    },
    "pageSections": {
      "type": "dynamiczone",
      "components": [
        "page.intro-text",
        "page.image-or-color-banner",
        "page.hero-banner",
        "page.full-width-banner"
      ]
    },
    "seo": {
      "type": "component",
      "component": "base.seo",
      "repeatable": false
    }
